{
  "name": "postcards",
  "version": "1.0.0",
  "description": "",
  "main": "postcards.js",
  "scripts": {
    "build:ts": "rollup -c",
    "build:scss": "sass --no-source-map src/game.scss postcards.css && postcss postcards.css -o postcards.css --no-map",
    "watch:ts": "rollup -c -w",
    "watch:scss": "sass --watch src/game.scss postcards.css",
    "watch:postcss": "postcss postcards.css -o postcards.css --watch --no-map",
    "watch": "npm-run-all --parallel watch:ts watch:scss watch:postcss",
    "build": "npm run build:ts && npm run build:scss"
  },
  "author": "Ábel Tibor Tóth",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.1.2",
    "glyphhanger": "^5.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rollup": "^4.53.3",
    "sass": "^1.71.0",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
